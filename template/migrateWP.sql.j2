UPDATE wp_options SET option_value = replace(option_value, "{{ hostvars['local']['sitedomain'] }}", "{{ sitedomain }}") WHERE option_name = 'home' OR option_name = 'siteurl';
UPDATE wp_posts SET guid = replace(guid, "{{ hostvars['local']['sitedomain'] }}", "{{ sitedomain }}");
UPDATE wp_posts SET post_content = replace(post_content, "{{ hostvars['local']['sitedomain'] }}", "{{ sitedomain }}");
